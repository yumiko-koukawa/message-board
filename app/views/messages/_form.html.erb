<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="discussion-form">
    <div class="discussion-form-tittle bg-primary">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true">投稿</span>
    </div>
    <div class="discussion-form-name form-group">
      <label for="message_name" class="col-sm-2 control-label">名前</label>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    
    <div class="discussion-form-age form-group">
      <label for="message_age" class="col-sm-2 control-label">年齢&nbsp;<span class="font-small">（半角数字）</span></label>
      <div class="col-sm-10">
        <%= f.text_field :age, class: 'form-control' %>
      </div>
    </div>
    
    <div class="discussion-form-contents form-group">
      <label for="message_body" class="col-sm-2 control-label">内容&nbsp;<span class="font-small">（30字以内）</span></label>
      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>
    
    <div class="discussion-form-submit form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
  
<% end %>