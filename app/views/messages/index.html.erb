<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>

  <div class="form-group">
    <div class="bg-primary">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true" style="padding: 5px 0px 10px 20px; font-size: 16px">投稿</span>
    </div>
    <label for="message_name" class="col-sm-1 control-label" style="margin-top: 10px">名前</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: 'form-control' %>
  </div>
  
  <div class="form-group" style="margin: 10px 0px 0px 15px">
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
  
<% end %>

